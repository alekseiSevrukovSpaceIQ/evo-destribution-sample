{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "rootDir": "src",
    "paths": {
      "components/*": ["./src/components/*"],
      "components": ["./src/components"],
      "context/*": ["./src/context/*"],
      "context": ["./src/context"],
      "utils/*": ["./src/utils/*"],
      "utils": ["./src/utils"],
      "types/*": ["./src/types/*"],
      "queries/*": ["./src/queries/*"],
      "theme/*": ["./src/theme/*"],
      "assets/*": ["./src/assets/*"],
      "templates": ["./src/templates"],
      "theme": ["./src/theme"],
      "test-utils": ["./src/test-utils"]
    }
  },
  "types": ["react", "react-native", "jest"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "coverage",
    "bin",
    ".storybook",
    ".build-config",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    "src/test-utils/",
    "src/docs/**/*",
    "src/assets/**/*",
  ]
}
